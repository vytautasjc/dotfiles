{
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run type:check)",
      "Bash(npm run build)",
      "Bash(npm run test:*)",
      "Read(~/.zshrc)",
      "Bash(git diff:*)"
    ],
    "ask": [
        "Bash(git commit:*)",
        "Bash(git push:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "OTEL_METRICS_EXPORTER": "otlp"
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["docker"],
    "network": {
      "allowUnixSockets": [
        "/var/run/docker.sock"
      ],
      "allowLocalBinding": true
    }
  }
}